# Docker configuration
COMPOSE_PROJECT_NAME=zenbit-frontend
COMPOSE_FILE=docker-compose.yml

# Frontend ports
FRONTEND_PORT=8080
FRONTEND_DEV_PORT=5173
FRONTEND_PREVIEW_PORT=4173

# Backend connection (use the service name inside Docker)
VITE_API_BASE_URL=http://backend:3000

# OAuth Client IDs
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here
VITE_MICROSOFT_CLIENT_ID=your_microsoft_client_id_here
VITE_LINKEDIN_CLIENT_ID=your_linkedin_client_id_here

# Docker network name (should match the backend)
DOCKER_NETWORK_NAME=app-network